{
  "manifest_version": 3,
  "name": "Tilda Image Uploader",
  "version": "1.0",
  "description": "Autotransfer from figma to tilda server for image",
  "permissions": ["scripting", "storage"],
  "host_permissions": ["*://*.tilda.cc/*", "*://tilda.cc/*", "*://*.tilda.ru/*", "*://tilda.ru/*"],
  "content_scripts": [
    {
      "matches": ["*://*.tilda.cc/*", "*://tilda.cc/*", "*://*.tilda.ru/*", "*://tilda.ru/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["*://*.tilda.cc/*", "*://tilda.cc/*", "*://*.tilda.ru/*", "*://tilda.ru/*"]
    }
  ],
  "action": {
    "default_title": "Upload Images",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
